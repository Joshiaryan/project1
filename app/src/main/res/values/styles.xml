<resources>
    <style name="ProfileMenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileMenuIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd=">20dp</item>
        <item name="app:tint">#1F2937</item>
    </style>

    <style name="ProfileMenuTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#1F2937</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileMenuArrowStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@android:drawable/ic_media_play</item>
        <item name="app:tint">#9CA3AF</item>
    </style>
</resources>